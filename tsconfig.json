{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
